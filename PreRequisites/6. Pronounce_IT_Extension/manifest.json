{
  "manifest_version": 2,

  "name":"Pronounce",
  "version":"1.0",


  "description": "Pronounce the selected Text",


  "icons":{
    "128":"icon_128.png",
    "48" :"icon_48.png",
    "16":"icon_16.png"
  },


